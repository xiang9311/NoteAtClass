<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/padding6"
    android:paddingBottom="@dimen/padding6"
    android:orientation="vertical" >
    
    <RelativeLayout
            android:id="@+id/RelativeLayout12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="全部笔记"
                android:textColor="@color/gray"
                android:textSize="13sp" />
            
            <ImageView 
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/down1"/>
            
        </RelativeLayout>

   
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_alignLeft="@+id/RelativeLayout12"
    	android:layout_below="@+id/RelativeLayout12"
        android:layout_height="1dp"
        android:background="@drawable/line_h2" />

</RelativeLayout>
