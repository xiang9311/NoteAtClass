<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".AddCursorActivity" >

    <RelativeLayout
        android:id="@+id/RelativeLayout11"
        style="@style/commen_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/tan"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/RelativeLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" >

            <ImageButton
                android:id="@+id/ib_addcursor_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@color/tan"
                android:src="@drawable/back" />

            <TextView
                android:id="@+id/tv_addcursor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/ib_addcursor_back"
                android:layout_toRightOf="@+id/ib_addcursor_back"
                android:layout_centerVertical="true"
                android:text="添加课程"
                android:textColor="@color/white"
                android:textSize="@dimen/title_size" />
        </RelativeLayout>

        <Button
            android:id="@+id/b_addcursor_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@color/tan"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>

    <!-- 顶部分割线 -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@drawable/line_h2_light" />

    <LinearLayout
        android:id="@+id/LinearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/padding5" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/roundcorner"
            android:orientation="vertical"
            android:padding="@dimen/padding5" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding5"
                android:text="课程名称："
                android:textSize="15sp" />

            <EditText
                android:id="@+id/et_cursor_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bigtext_bg"
                android:padding="@dimen/padding5"
                android:singleLine="true"
                android:textSize="15sp" />
        </LinearLayout>

        <!-- 教师 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/roundcorner"
            android:orientation="vertical"
            android:padding="@dimen/padding5" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding5"
                android:text="教师名称："
                android:textSize="15sp" />

            <EditText
                android:id="@+id/et_teacher_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bigtext_bg"
                android:inputType="textPersonName"
                android:padding="@dimen/padding5"
                android:singleLine="true"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding5"
                android:text="联系方式："
                android:textSize="15sp" />

            <EditText
                android:id="@+id/et_teacher_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bigtext_bg"
                android:inputType="phone"
                android:padding="@dimen/padding5"
                android:singleLine="true"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding5"
                android:text="Email："
                android:textSize="15sp" />

            <EditText
                android:id="@+id/et_teacher_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bigtext_bg"
                android:inputType="textEmailAddress"
                android:padding="@dimen/padding5"
                android:singleLine="true"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/roundcorner"
            android:orientation="vertical"
            android:padding="@dimen/padding5" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding5"
                android:text="备注："
                android:textSize="15sp" />

            <EditText
                android:id="@+id/et_more"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bigtext_bg"
                android:gravity="top"
                android:minLines="3"
                android:padding="@dimen/padding3"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
